<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.finalapp.MainActivity"
    android:screenOrientation="portrait">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery"
        android:id="@+id/battery_button"
        android:onClick="getBatteryStat"
        android:layout_above="@+id/log_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contacts"
        android:id="@+id/contact_button"
        android:layout_alignBottom="@+id/battery_button"
        android:layout_centerHorizontal="true"
        android:onClick="getContacts"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:id="@+id/location_button"
        android:layout_alignBottom="@+id/contact_button"
        android:layout_alignParentEnd="true"
        android:onClick="getLocation"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log"
        android:id="@+id/log_button"
        android:layout_alignTop="@+id/message_button"
        android:layout_alignParentStart="true"
        android:onClick="getLogs"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:id="@+id/message_button"
        android:layout_alignTop="@+id/notification_buton"
        android:layout_alignEnd="@+id/contact_button"
        android:onClick="getMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notif"
        android:id="@+id/notification_buton"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:onClick="getNotified"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_image_navigate_next"
        android:onClick="changeUI"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/notification_buton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:onClick="sendMessage"/>


</RelativeLayout>
